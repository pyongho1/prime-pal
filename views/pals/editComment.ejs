<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/updateCommentStyle.css" />
<%- include('../partials/nav') %>

<section>
  <div class="mainContainer">
    <h1><%= title %></h1>
    <form
      action="/pals/<%= pal._id %>/comments/<%= comment._id %>?_method=PUT"
      method="POST"
    >
      <label> Content:</label>
      <textarea
        cols="50"
        rows="10"
        type="text"
        name="content"
        autocomplete="off"
      >
  <%= comment.content %></textarea
      >

      <button type="submit">Update Comment</button>
    </form>
  </div>
</section>

